generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  isFirstLogin Boolean   @default(true)
  id           String    @id @default(uuid())
  name         String
  email        String    @unique
  password     String
  isAdmin      Boolean   @default(false)
  created_at   DateTime? @default(now())
  update_at    DateTime? @default(now())

  @@map("Admins")
}

model Categoria {
  id        String     @id @default(uuid())
  name      String
  date      DateTime   @default(now())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Conteudos Conteudo[] @relation("CategoriaConteudos")

  @@map("Categorias")
}

model Conteudo {
  id           String    @id @default(uuid())
  titulo       String
  corpo        String
  autor        String?
  banner       String
  publicadoEm  DateTime  @default(now())
  atualizadoEm DateTime  @updatedAt
  categoriaId  String // Alterado para String
  categoria    Categoria @relation(fields: [categoriaId], references: [id], name: "CategoriaConteudos")
  viewCount    Int       @default(0)
}

model Event {
  id            String         @id @default(uuid())
  title         String
  description   String
  date          String
  banner        String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  registrations Registration[] @relation("EventRegistrations")

  @@map("Events")
}

model Registration {
  id        Int      @id @default(autoincrement())
  eventId   String
  name      String
  telefone  String?
  idade     Int?
  email     String
  group     String?
  sector    String?
  createdAt DateTime @default(now())

  event Event @relation(fields: [eventId], references: [id], name: "EventRegistrations")

  @@map("Registrations")
}

model LeituraDiaria {
  id                Int      @id @default(autoincrement())
  data              DateTime @default(now())
  titulo            String
  corLiturgica      String
  primeiraLeitura   String
  salmoResponsorial String
  segundaLeitura    String?
  evangelho         String
}
